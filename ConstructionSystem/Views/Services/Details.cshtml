<body class="user-profile">
    <div class="container emp-profile">
        <form method="post">
            <div class="row">
                <div class="col-md-5">
                    <div class="profile-img">

                        @*<img src="~/ServicesLinks/ServiceDetails/images/1.PNG" />*@
